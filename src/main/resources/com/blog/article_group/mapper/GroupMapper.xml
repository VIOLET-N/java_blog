<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.blog.article_group.mapper.GroupMapper">
    <insert id="create" keyProperty="articleGroupId" useGeneratedKeys="true">
        insert into article_group (title, update_time)
        values (#{title}, #{updateTime});
    </insert>

    <select id="selectAll" resultType="com.blog.article_group.entity.ArticleGroup">
        select * from article_group
    </select>

    <update id="update">
        update article_group set title=#{title}, update_time=#{updateTime} where article_group_id=#{articleGroupId}
    </update>

    <delete id="delete">
        delete from article_group where article_group_id=#{articleGroupId}
    </delete>
</mapper>